<%= link_to "New Conference", new_consortium_path %>
<% @consortium.each do |article| %>
  <h3><%= article.name.html_safe %></h3>
  <p><%= article.date.html_safe %></p>
  <%= link_to "Edit Conference", edit_consortium_path(article) %>
  <% if article != @consortium.last %>
  <hr />
  <% end %>
<% end %>